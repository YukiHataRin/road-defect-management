{
    "development": {
        "flask": {
            "env": "development",
            "debug": true,
            "secret_key": "dev-secret-key-please-change-in-production"
        },
        "database": {
            "url": "sqlite:///users.db",
            "echo": true
        },
        "jwt": {
            "secret_key": "jwt-secret-key-please-change-in-production",
            "algorithm": "HS256",
            "access_token_expires": 30,
            "refresh_token_expires": 7
        },
        "api": {
            "version": "v1",
            "cors_origins": [
                "http://localhost:5000",
                "http://localhost:5001",
                "http://127.0.0.1:5000",
                "http://127.0.0.1:5001"
            ],
            "cors_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
            "cors_headers": ["Content-Type", "Authorization"]
        },
        "road_defect_api": {
            "base_url": "http://127.0.0.1:5002/api/v1",
            "timeout": 5
        }
    },
    "production": {
        "flask": {
            "env": "production",
            "debug": false,
            "secret_key": "your-production-secret-key"
        },
        "database": {
            "url": "postgresql://user:password@localhost:5432/users",
            "echo": false
        },
        "jwt": {
            "secret_key": "your-production-jwt-secret",
            "algorithm": "HS256",
            "access_token_expires": 15,
            "refresh_token_expires": 1
        },
        "api": {
            "version": "v1",
            "cors_origins": [
                "https://your-domain.com"
            ],
            "cors_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
            "cors_headers": ["Content-Type", "Authorization"]
        },
        "road_defect_api": {
            "base_url": "https://api.your-domain.com/api/v1",
            "timeout": 10
        }
    }
} 